<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="@dimen/card_height"
    >

  <ImageView
      android:id="@+id/filmPoster"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:src="@drawable/ic_rebel_alliance_logo"
      />

  <TextView
      android:id="@+id/filmTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_middle"
      android:layout_marginBottom="@dimen/margin_small"
      tools:text="Return of the Jedi"
      app:layout_constraintBottom_toTopOf="@+id/filmDirector"
      style="@style/FilmList.Title"
      />

  <TextView
      android:id="@+id/filmDirector"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/margin_middle"
      android:layout_marginBottom="@dimen/margin_small"
      tools:text="Richard Marquand"
      app:layout_constraintBottom_toBottomOf="parent"
      style="@style/FilmList.SubTitle"
      />

</android.support.constraint.ConstraintLayout>